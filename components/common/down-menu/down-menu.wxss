/* components/common/menu/menu.wxss */
.iconfont {
  font-size: 20rpx;
}

.selected-box {
  font-size: 26rpx;
  /* border: 1px solid #ddd; */
  border-radius: 10rpx;
  justify-content: space-between;
  width: 100rpx;
  padding: 10rpx 20rpx;
}

.menu-box {
  position: relative;
  height: 50rpx;
  width: 100rpx;
  padding: 10rpx 20rpx;
}

.item-box {
  width: 100rpx;
  padding: 10rpx 20rpx;
  position: absolute;
  z-index: -99;
  bottom: 0rpx;
  left: 0;
  text-align: center;
  font-size: 26rpx;
}

.slidown {
  display: block;
  animation: slidown .5s ease-in both;
  overflow: hidden;
  overflow-y: auto;
}


/*筛选项隐藏 显示动画 start*/
@keyframes slidown {
  from {
    height: 0;
  }

  to {
    height: 200rpx;
  }
}

.slidup {
  display: block;
  animation: slidup .1s ease-in both;
}

@keyframes slidup {
  from {
    height: 200rpx;
  }

  to {
    height: 0rpx;
  }
}