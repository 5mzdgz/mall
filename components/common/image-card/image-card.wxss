/* components/common/image-card/image-card.wxss */
.image-card {
  padding: 0 30rpx;
}

.image-box {
  width: 100%;
  background: #ddd;
  border-radius: 15rpx;
  overflow: hidden;
}

.image-box video {
  width: 100%;
  height: 100%;
}

.image-box image {
  width: 100%;
  height: 100%;
}

.content {
  padding: 15rpx 0 30rpx 0;
  justify-content: space-between;
}

.title-box .sub {
  font-size: 24rpx;
  background: #4E89FC;
  margin-left: 30rpx;
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
}

.title-box .title {
  font-size: 30rpx;
  font-weight: bold;
}

.attribute {
  font-size: 26rpx;
  color: #aaa;
  padding: 10rpx 0;
}

.attr-item {
  margin-right: 30rpx;
}

.attribute .label {
  margin-right: 10rpx;
}

.price-box {
  font-size: 26rpx;
  color: red;
}

.price-box .price {
  font-weight: bold;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.right-box {
  text-align: center;
}

.right-box .iconname {
  font-size: 28rpx;
}
