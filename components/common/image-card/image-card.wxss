/* components/common/image-card/image-card.wxss */
.image-card {
  margin: 0 30rpx;
  background: #fff;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
  overflow: hidden;
}

.image-box {
  width: 100%;
  background: #ddd;
  overflow: hidden;
}

.image-box video {
  width: 100%;
  height: 100%;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
}

.image-box image {
  width: 100%;
  height: 100%;
}

.content {
  padding: 15rpx 30rpx 15rpx 30rpx;
  justify-content: space-between;
}

.title-box .sub {
  font-size: 24rpx;
  background: #4E89FC;
  margin-left: 30rpx;
  color: #fff;
  padding: 5rpx 10rpx;
  border-radius: 5rpx;
}

.title-box .title {
  font-size: 30rpx;
  font-weight: bold;
}

.attribute {
  font-size: 26rpx;
  color: #aaa;
  padding: 10rpx 0;
}

.attr-item {
  margin-right: 30rpx;
}

.attribute .label {
  margin-right: 10rpx;
}

.price-box {
  font-size: 26rpx;
  color: red;
}

.price-box .price {
  font-weight: bold;
  font-size: 30rpx;
  margin-right: 10rpx;
}

.right-box {
  text-align: center;
}

.right-box .iconname {
  font-size: 28rpx;
}

.right-box .icon .iconfont {
  font-size: 50rpx;
  color: #4E89FC;
}

.right-box .collection {
  font-size: 20rpx;
  border-radius: 20rpx;
  padding: 5rpx 20rpx;
  color: red;
  border: 1px solid red;
  margin-top: 10rpx;
}
