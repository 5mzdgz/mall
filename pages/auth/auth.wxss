/* pages/auth/auth.wxss */

.release {
  border-radius: 20rpx;
  background: #fff;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
}

.release .label {
  width: 170rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.input-item {
  font-size: 26rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #ddd;
}

.input-box .attr-label {
  width: 40rpx;
}

input {
  width: 440rpx;
}

.label-box {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 15rpx;
  border-bottom: 1px solid #ddd;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.no-border {
  border: none;
}

button {
  background: #4E89FC;
  margin: 60rpx 30rpx;
  color: #fff;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
}

.desc {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #ddd;
}

.desc textarea {
  height: 200rpx;
  font-size: 24rpx;
  line-height: 42rpx;
  text-align: justify;
  margin-left: 20rpx;
}

.add-img {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
  background: #f6f6f6;
  margin: 12rpx 20rpx 12rpx 0;
  border-radius: 10rpx;
}

.add-img {
 border: 1px dashed #ddd;
}

.add-img text {
  font-size: 100rpx;
}