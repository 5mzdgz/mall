/* pages/auth/auth.wxss */

.release {
  border-radius: 20rpx;
  background: #fff;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
}

.release .label {
  width: 120rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.input-item {
  font-size: 26rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #ddd;
}

.input-box .attr-label {
  width: 40rpx;
}

input {
  width: 500rpx;
}

.label-box {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 15rpx;
  border-bottom: 1px solid #ddd;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.no-border {
  border: none;
}

button {
  background: #4E89FC;
  margin: 60rpx 30rpx;
  color: #fff;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
}