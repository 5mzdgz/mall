/* pages/release/release.wxss */
page {
  background: #f6f6f6;
}

.form-box {
  
}

.release {
  border-radius: 20rpx;
  background: #fff;
  margin: 20rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
}

.release .label {
  width: 120rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.input-item {
  font-size: 26rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid #ddd;
}

.input-box .attr-label {
  width: 40rpx;
}

input {
  width: 500rpx;
}

.label-box {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 15rpx;
  border-bottom: 1px solid #ddd;
}

.no-border {
  border: none;
}

.label-box .label-item {
  font-size: 22rpx;
  background: #eee;
  padding: 5rpx 0;
  width: 145rpx;
  border-radius: 5rpx;
  margin: 15rpx 0;
  margin-right: 20rpx;
  text-align: center;
  color: #333;
}

.label-box .selected-item {
  background: #4E89FC;
  color: #fff;
}

.desc {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #ddd;
}

.desc textarea {
  height: 200rpx;
  font-size: 24rpx;
  line-height: 42rpx;
  text-align: justify;
}

.tips {
  color: red;
}

.img-box {
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid #ddd;
  padding: 10rpx;
}

.img-item-box, .add-img {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
  background: #f6f6f6;
  margin: 12rpx 20rpx 12rpx 0;
  border-radius: 10rpx;
}

.img-item-box image {
  width: 100%;
  height: 100%;
}

.cancel-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  z-index: 9;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 50rpx;
  border-radius: 100%;
  color: #fff;
  background: #ddd;
  overflow: hidden;
}

.add-img {
 border: 1px dashed #ddd;
}

.add-img text {
  font-size: 100rpx;
}

button {
  background: #4E89FC;
  margin: 60rpx 30rpx;
  color: #fff;
  box-shadow: 0 10rpx 10rpx rgba(0, 0, 0, 0.16);
}